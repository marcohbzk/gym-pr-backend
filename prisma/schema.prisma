generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  bodyweightKg Float?
  createdAt    DateTime @default(now())
  prs          PR[]
  gymId        String?
  gym          Gym?     @relation(fields: [gymId], references: [id])
  
  friendshipsSent     Friendship[] @relation("FriendshipsSent")
  friendshipsReceived Friendship[] @relation("FriendshipsReceived")
}

model Friendship {
  userId    String
  friendId  String
  createdAt DateTime @default(now())

  user   User @relation("FriendshipsSent", fields: [userId], references: [id])
  friend User @relation("FriendshipsReceived", fields: [friendId], references: [id])

  @@id([userId, friendId])
}

model PR {
  id           String   @id @default(uuid())
  userId       String
  liftType     String
  weightKg     Float
  bodyweightKg Float?
  prDate       DateTime @default(now())
  visibility   Boolean  @default(false)
  user         User     @relation(fields: [userId], references: [id])
}

model Gym {
  id        String   @id @default(uuid())
  name      String
  address   String?
  lat       Float?
  lng       Float?
  placeId   String?  @unique
  users     User[]
}
